@model BankingApplication.Models.Non_Table_Models.Users.User_CreateView

@{
    ViewData["Title"] = "Create";
    var pageMethod = ViewData["Method"];
}

<h1>@pageMethod User</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="@pageMethod" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!--Hidden Fields-->
            @if (pageMethod=="Edit")
            {
                <input type="hidden" asp-for="user.userId" />
                <input type="hidden" asp-for="user.addressId" />
                <input type="hidden" asp-for="userAddress.addressId" />
            }


            <!-- User Fields -->
            <div class="form-group">
                <label asp-for="user.userName" class="control-label"></label>
                <input asp-for="user.userName" class="form-control" />
                <span asp-validation-for="user.userName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="user.firstName" class="control-label"></label>
                <input asp-for="user.firstName" class="form-control" />
                <span asp-validation-for="user.firstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="user.lastName" class="control-label"></label>
                <input asp-for="user.lastName" class="form-control" />
                <span asp-validation-for="user.lastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="user.email" class="control-label"></label>
                <input asp-for="user.email" class="form-control" />
                <span asp-validation-for="user.email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="user.password" class="control-label"></label>
                <input asp-for="user.password" class="form-control" type="password" value="@Model.user.password" />
                <span asp-validation-for="user.password" class="text-danger"></span>
            </div>

            <!-- Address Fields -->
            <h4>Address Details</h4>
            <div class="form-group">
                <label asp-for="userAddress.city" class="control-label"></label>
                <input asp-for="userAddress.city" class="form-control" />
                <span asp-validation-for="userAddress.city" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userAddress.landMark" class="control-label"></label>
                <input asp-for="userAddress.landMark" class="form-control" />
                <span asp-validation-for="userAddress.landMark" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userAddress.state" class="control-label"></label>
                <input asp-for="userAddress.state" class="form-control" />
                <span asp-validation-for="userAddress.state" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userAddress.pinCode" class="control-label"></label>
                <input asp-for="userAddress.pinCode" class="form-control" />
                <span asp-validation-for="userAddress.pinCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userAddress.address" class="control-label"></label>
                <input asp-for="userAddress.address" class="form-control" />
                <span asp-validation-for="userAddress.address" class="text-danger"></span>
            </div>

            <!-- Dropdowns -->
            <div class="form-group">
                <label asp-for="user.roleId" class="control-label"></label>
                <select asp-for="user.roleId" class="form-control">
                    <option value="">Select Role</option>
                    @foreach (var role in Model.userRoles)
                    {
                        <option value="@role.roleId">@role.roleName</option>
                    }
                </select>
                <span asp-validation-for="user.roleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="user.accountType" class="control-label"></label>
                <select asp-for="user.accountType" class="form-control">
                    <option value="">Select Account Type</option>
                    @foreach (var type in Model.accountTypes)
                    {
                        <option value="@type.accountTypeId">@type.accountTypeName</option>
                    }
                </select>
                <span asp-validation-for="user.accountType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="user.bankId" class="control-label"></label>
                <select asp-for="user.bankId" class="form-control">
                    <option value="">Select Bank</option>
                    @foreach (var bank in Model.banks)
                    {
                        <option value="@bank.bankId">@bank.bankName</option>
                    }
                </select>
                <span asp-validation-for="user.bankId" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <input type="submit" value="@pageMethod" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
